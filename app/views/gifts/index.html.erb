            <div class="fileupload bottom">
              <%= t '.file_prompt' %>
              <%= file_field_tag :gift_file, :disabled => !post_image_allowed?(), :id => "gift_file", :class => "upload",
                                 :onchange => '{document.getElementById("disp_gift_file").value = this.value}' %>
