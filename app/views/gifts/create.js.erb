<% puts "@errors.size = #{@errors.size}, @gifts.size = #{@gifts.size}" -%>
<% if @errors.size > 0 -%>
$('#ajax_tasks_errors').append('<%= j render("ajax_errors") %>');
ajax_flash_new_table_rows('ajax_tasks_errors',<%= @errors.size %>);
<% end -%>
<% if @gifts.size > 0 -%>
document.getElementById('new_messages_buffer_div').innerHTML = '<%= j render("create") %>';
ajax_insert_update_gifts() ; <%# move new gift from buffer to gifts table -%>
trigger_ajax_tasks_form(100); <%# post status on api walls -%>
<% end -%>
