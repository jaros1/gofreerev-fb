<% friend = user_div.friend?(@user)
   div_title = '.title' + (friend ? '' : '_non') + '_friend'
   username = user_div.short_or_full_user_name(@user)
   balance = friend ? format_user_balance(user_div, @user) : nil
-%>
<div title="<%= t div_title, :username => username, :balance => balance %>"
     onclick="top.location.href = '<%= url_for(user_div) %>'">
  <div><%= image_tag(user_div.profile_picture_url, :class => "#{@size}_pro_pic", :alt => nil) %></div>
  <% if @page_header -%>
      <div class="user_div_name_and_api">
        <table>
          <tr>
            <td><%= h @user.short_user_name %></td>
          </tr>
          <tr>
            <td><%= @user.api_name_with_brackets %></td>
          </tr>
        </table>
      </div>
  <% end -%>
</div>