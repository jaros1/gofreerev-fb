<% if @gift_link_id -%>
<%# ok response. change like link <=> unlike link or change follow link <=> unfollow link -%>
(function () {
    var link_id = '<%= @gift_link_id %>';
    var link_href = '<%= @gift_link_href %>';
    var link_text = '<%= @gift_link_text %>';
    var link = document.getElementById(link_id);
    if (link) {
        link.href = link_href;
        link.innerHTML = link_text;
    }
    else alert('system error - link with id ' + link_id + ' was not found.');
})();
<% end -%>
