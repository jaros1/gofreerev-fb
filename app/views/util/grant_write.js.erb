<% if @provider %>
(function () {
    // gifts/index and auth/index pages - hide div with grant write link
    // todo: should delete link. Could be a problem with unique id if read => write grant operation is repeated in web page without refresh (not a problem in firefox 30.0 & flickr)
    var div_id = "grant_write_div_<%= @provider %>" ;
    var div = document.getElementById(div_id) ;
    if (div) div.style.display = 'none';
    // change "Access" to "Read+write" (access_link_text_2). should change mouse over text (access_title_2).
    var td_id = "access_td_<%= @provider %>" ;
    var td = document.getElementById(td_id) ;
    if (td) td.setAttribute('title', "<%= @access_title_2 %>") ;
    var a_id = "access_a_<%= @provider %>" ;
    var a = document.getElementById(a_id) ;
    if (a) a.innerHTML = "<%= @access_link_text_2 %>" ;
})();
<% end %>