<%# check for new messages. html code to be inserted in current html page %>
<div id="new_messages_count_div"><%= @new_messages_count %></div>
<div id="new_comments_div">
  <table>
    <tbody id="new_comments_tbody">
      <%= render :partial => 'comments/comments1' if @comments %>
    </tbody>
  </table>
</div>
<% if @gifts or @new_newest_gift_id -%>
<div id="new_gifts_div">
  <%= hidden_field_tag :new_newest_gift_id, @new_newest_gift_id, :id => "new-newest-gift-id" %>
<% if @gifts -%>
  <table>
    <tbody id="new_gifts_tbody">
    <%= render :partial => 'gifts/gifts' %>
    </tbody>
  </table>
<% end -%>
</div>
<% end -%>