<div style="width: 100%"><br/></div>

<div style="width: 100%">
  <table>
    <tr>
      <td>
        <table>
          <tr>
            <th colspan="3" style="text-align: center">Log in / out</th>
          </tr>
          <% @providers.each do |provider, logged_in| -%>
              <tr title="<%= t ".log_in_out_title#{logged_in}", :appname => APP_NAME, :apiname => provider_downcase(provider) %>">
                <td><%= provider_camelize(provider) %></td>
                <td>:</td>
                <td>
                  <% if logged_in == 0 -%>
                      <%= link_to t(".log_in_link_text"), "/auth/#{provider}" %>
                  <% else -%>
                      <%= link_to t(".log_out_link_text"), auth_destroy_path(:id => provider), :method => :delete %>
                  <% end -%>
                </td>
              </tr>
          <% end %>
        </table>
      </td>
      <td style="width: 30px"></td>
      <td>
        <table title="<%= t ".visit_title", :appname => APP_NAME %>">
          <tr><th><%= t ".visit_th" %></th></tr>
          <% @providers.each do |provider, logged_in| -%>
            <tr>
              <td><%= link_to provider_camelize(provider), API_URL[provider], :target => '_blank' %></td>
            </tr>
          <% end -%>
        </table>
      </td>
    </tr>
  </table>
</div>

<div style="width: 100%"><br/></div>
<%= link_to t('.remove_cookies_link_text'), cookie_decline_cookies_path %>
<div style="width: 100%"><br/></div>

<% if false -%>
    <% for key in session.keys do -%>
        <%= "session[:#{key}] = #{debug session[key]}" %><br />
    <% end -%>
<% end -%>

<div style="width: 100%">
  <hr>
</div>