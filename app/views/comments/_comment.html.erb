<tr id="<%= "gift-#{comment.gift.id}-comment-#{comment.id}" %>">
  <td colspan="2" style="text-align: center; vertical-align: top">
    <% if comment.show_cancel_new_deal_link?(@user) -%>
        <%= link_to_comment_new_deal_cancel(comment) %>
    <% end -%>
  </td>
  <td style="vertical-align: top;"><%= @user2 = comment.user ; render '/shared/user_div' %></td>
  <td><%= my_sanitize comment.comment %></td>
</tr>