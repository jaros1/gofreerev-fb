<% if @link_id -%>
(function () {
    var row_id = '<%= @link_id %>' ;
    var row = document.getElementById(row_id) ;
    if (!row) add2log('comments/destroy - did not find comment row with id ' + row_id) ;
    else {
        var tbody = row.parentNode ;
        var next_row = row.nextSibling ;
        tbody.removeChild(row) ;
        // remove ajax error table for comment if it exists
        var row_id_error = row_id + '-errors' ;
        if (document.getElementById(row_id_error)) tbody.removeChild(next_row) ;
    } ;
    show_more_rows_scroll() ;
})();
<% end -%>
<% if @errors.size > 0 -%>
$('#tasks_errors2').append('<%= j render('shared/ajax_errors') %>');
move_tasks_errors2();
<% end -%>