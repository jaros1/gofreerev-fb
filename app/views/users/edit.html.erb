<%= t '.page_header_text_html' %>

<table>
  <%= render :partial => 'user', :locals => {:user => @user2, :edit => true} %>
</table>
<br/>
<table>
  <tr title="<%= t '.post_on_wall_title', :apiname => provider_downcase(@user2.provider) %>">
    <td><%= t '.post_on_wall_prompt', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %></td>
    <td>:</td>
    <td><%= post_on_wall_checkbox(@user2.provider, @post_on_wall) %></td>
  </tr>
  <tr title="<%= t '.share_balance_title', :appname => APP_NAME %>">
    <td><%= t '.share_balance_prompt', :appname => APP_NAME %></td>
    <td>:</td>
    <td>x</td></tr>
  <tr title="<%= t '.log_out_title', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %>">
    <td><%= t '.log_out_prompt', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %></td>
    <td>:</td>
    <td><%= link_to t('.log_out_link_text'), auth_destroy_path(:id => @user2.provider, :return_to => users_path(:friends => 'me')), :method => :delete %></td>
  </tr>
  <tr title="<%= t '.access_title', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %>">
    <td><%= t '.access_prompt' %></td>
    <td>:</td>
    <td><%= link_to provider_downcase(@user2.provider), API_APP_SETTING_URL[@user2.provider] || '#', :target => '_blank' %></td>
  </tr>
  <tr title="<%= t '.delete_account_title', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %>">
    <td><%= t '.delete_account_prompt', :appname => APP_NAME, :apiname => provider_downcase(@user2.provider) %></td>
    <td>:</td>
    <td>
      <%= link_to 'delete account', user_path(:id => @user2.id), :remote => true, :method => :delete, :data => { :confirm => 'Delete account?' } %>
    </td>
  </tr>
</table>
<br>
<div style="width: 100%"><hr></div>

